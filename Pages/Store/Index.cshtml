@page
@model MyWebPage.Pages.Store.IndexModel

@{
    ViewData["Title"] = "Index";
}
<section class="py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-4">
                    <h2>
                        Store
                    </h2>
                    <p>
                        <a asp-page="Create">Create New</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="row text-center fadeIn">
            @foreach (var item in Model.Items)
            {
                var imagePath = "";
                @if (item.ImageUrl != null)
                {
                    imagePath = @"images\" + item.ImageUrl;
                }
                <div class="col-lg-4 mb-5">
                    <div class="d-block border shadow bg-white">
                        <div class="border-bottom">
                            <img class="w-25 h-25 mb-3 mt-3" src="@imagePath" alt="Sample Photo" />
                        </div>
                        <div class="border-bottom mb-3">
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </div>
                        <div class="border-bottom mb-3">
                            @Html.DisplayFor(modelItem => item.Price)
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary btn-lg fw-normal shadow" type="submit" value="Add to basket">
                                <span>Add to basket</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
